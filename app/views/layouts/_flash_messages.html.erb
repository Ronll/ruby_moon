<% unless flash[:error].nil? %>
    <div class="page-alert alert alert-danger alert-dismissible">
      <%= flash[:error] %>
      <button class="close" data-dismiss="alert">×</button>
    </div>
<% end %>

<% unless flash[:success].nil? %>
    <div class="page-alert alert alert-success alert-dismissible">
      <%= flash[:success] %>
      <button class="close" data-dismiss="alert">×</button>
    </div>
<% end %>