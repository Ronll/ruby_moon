<div class="calendar-controls">
  <div class="month-before">
    <a href="<%= calendar_index_url year: @prev_month.year, month: @prev_month.month %>">
      <span class="glyphicon glyphicon-arrow-left"></span><%= month_with_year(@prev_month) %>
    </a>
  </div>
  <div class="month-after">
    <a href="<%= calendar_index_url year: @next_month.year, month: @next_month.month %>">
      <%= month_with_year(@next_month) %><span class="glyphicon glyphicon-arrow-right"></span>
    </a>
  </div>
  <div class="clearfix"></div>
</div>