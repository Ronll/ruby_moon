<% content_for(:title, 'Sign in') %>

<div class="sign-in-container">
  <h1 class="sign-in-title">Sign in</h1>

  <%= form_for(@sign_in_form, url: sign_in_url, method: :post, html: { class: 'form-horizontal' }) do |f| %>
    <% if @sign_in_form.errors.any? %>
      <div class="text-danger col-sm-offset-4 col-sm-8">
        <% @sign_in_form.errors.full_messages.each do |error| %>
            <p><%= error %></p>
        <% end %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label(:email, 'E-mail', class: 'col-sm-4 control-label') %>
      <div class="col-sm-8">
        <%= f.email_field(:email, placeholder: 'E-mail', class: 'form-control', autofocus: '') %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label(:password, 'Password', class: 'col-sm-4 control-label') %>
      <div class="col-sm-8">
        <%= f.password_field(:password, placeholder: 'Password', class: 'form-control') %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
        <%= f.button('Sign in', class: 'btn btn-default') %>
      </div>
    </div>
  <% end %>
</div>