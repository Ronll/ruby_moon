<% content_for(:title, t('views.user_sessions.sign_in')) %>

<div class="sign-in-container">
  <h1 class="sign-in-title"><%= t('views.user_sessions.sign_in') %></h1>

  <%= form_for(@sign_in_form, url: sign_in_url, method: :post, html: { class: 'form-horizontal' }) do |f| %>
    <% if @sign_in_form.errors.any? %>
          <div class="form-group">
              <div class="text-danger col-sm-offset-4 col-sm-8">
                <% @sign_in_form.errors.full_messages.each do |error| %>
                    <div><%= error %></div>
                <% end %>
              </div>
          </div>
    <% end %>

    <div class="form-group">
      <%= f.label(:email, t('views.user_sessions.email'), class: 'col-sm-4 control-label') %>
      <div class="col-sm-8">
        <%= f.email_field(:email, placeholder: t('views.user_sessions.email'), class: 'form-control', autofocus: '') %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label(:password, t('views.user_sessions.password'), class: 'col-sm-4 control-label') %>
      <div class="col-sm-8">
        <%= f.password_field(:password, placeholder: t('views.user_sessions.password'), class: 'form-control') %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
        <%= f.button(t('views.user_sessions.sign_in'), class: 'btn btn-default') %>
      </div>
    </div>
  <% end %>
</div>