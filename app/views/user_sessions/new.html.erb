<% content_for(:title, 'Sign in') %>

<div class="sign-in-container">
  <h1 class="sign-in-title">Sign in</h1>

  <%= form_tag(sign_in_url, method: :post, class: 'form-horizontal') do %>
    <% if @auth_error %>
      <p class="bg-danger">Invalid e-mail or password</p>
    <% end %>

    <div class="form-group">
      <%= label_tag(:email, 'E-mail', class: 'col-sm-4 control-label') %>
      <div class="col-sm-8">
        <%= email_field_tag(:email, nil, placeholder: 'E-mail', class: 'form-control') %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag(:password, 'Password', class: 'col-sm-4 control-label') %>
      <div class="col-sm-8">
        <%= password_field_tag(:password, nil, placeholder: 'Password', class: 'form-control') %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
        <%= button_tag('Sign in', class: 'btn btn-default') %>
      </div>
    </div>
  <% end %>
</div>