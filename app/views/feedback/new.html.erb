<div id="feedback-form-container">
  <h3> <%= t('.feedback') %></h3>
  <%= form_for @feedback, builder: BootstrapFormBuilder, url: feedback_path, html: {class: 'form-horizontal'} do |tt| %>
      <% if @feedback.errors.any? %>
          <div class="form-group">
            <div class="col-sm-offset-2">
            <ul>
              <% @feedback.errors.full_messages.each do |msg| %>
                  <li class="text-danger"> <%= msg %> </li>
              <% end %>
            </ul>
            </div>
          </div>
      <% end %>

      <%= tt.form_group :name do %>
          <%= tt.label :name, t('.name'), class: 'control-label col-sm-2' %>
          <div class="col-sm-4">
            <%= tt.text_field :name, class: 'form-control' %>
          </div>
      <% end %>

      <%= tt.form_group :email do %>
          <%= tt.label :email, t('.email'), class: 'control-label col-sm-2' %>
          <div class="col-sm-4">
            <%= tt.text_field :email, class: 'form-control' %>
          </div>
      <% end %>

      <%= tt.form_group :subject do %>
          <%= tt.label :subject, t('.subject'), class: 'control-label col-sm-2' %>
          <div class="col-sm-4">
            <%= tt.text_field :subject, class: 'form-control' %>
          </div>
      <% end %>

      <%= tt.form_group :message do %>
          <%= tt.label :message, t('.message'), class: 'control-label col-sm-2' %>
          <div class="col-sm-4">
            <%= tt.text_area :message, class: 'form-control' %>
          </div>
      <% end %>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= tt.submit class: 'btn btn-default' %>
        </div>
      </div>
  <% end %>

</div>
