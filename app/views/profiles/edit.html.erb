<% content_for(:title, t('.profile')) %>

<div class="user-form-container">
  <h1 class="user-form-header"><%= t('.profile') %></h1>

  <%= form_for(@user, builder: BootstrapFormBuilder, url: profile_url, method: :put, html: { class: 'form-horizontal' }) do |f| %>

      <% if f.object.errors.count > 0 %>
          <div class="form-group">
            <div class="text-danger col-sm-8 col-sm-offset-4"><%= t '.errors' %></div>
          </div>
      <% end %>

      <%= f.form_group(:email) do %>
          <%= f.label(:email, nil, class: 'col-sm-4 control-label') %>
          <div class="col-sm-8">
            <%= f.email_field(:email, placeholder: human_attribute(f.object, :email), class: 'form-control', autofocus: '') %>
            <%= f.full_errors_for(:email) %>
          </div>
      <% end %>

      <%= f.form_group(:time_zone) do %>
          <%= f.label(:time_zone, nil, class: 'col-sm-4 control-label') %>
          <div class="col-sm-8">
            <%= f.time_zone_select(:time_zone, nil, {}, class: 'form-control') %>
            <%= f.full_errors_for(:time_zone) %>
          </div>
      <% end %>

      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
          <%= f.button(t('.update'), class: 'btn btn-default') %>
        </div>
      </div>
  <% end %>
</div>